<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivanng.secondlifeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_ruond"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Login" />
        <activity android:name=".SignUp" />
        <activity android:name=".LoadingPage"
            android:theme="@style/SplashTheme"/>
        <activity
            android:name=".Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Likes.LikesAcitivity"></activity>
        <activity android:name=".Profile.ProfileAcitivity"></activity>
        <activity android:name=".Search.SearchAcitivity"></activity>
        <activity android:name=".Share.ShareAcitivity"></activity>
    </application>

</manifest>